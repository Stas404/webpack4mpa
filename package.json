{
  "name": "Webpack4MPA",
  "version": "0.0.2",
  "description": "Starter-kit for building MPA and static sites with Webpack and Metalsmith",
  "config": {
    "wds": {
      "protocol": "http",
      "host": "localhost",
      "port": "3000"
    },
    "buildNotify": {
      "production": true,
      "dev": true
    }
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "rm -rf build && (npm run dev:metalsmith & npm run dev:webpack)",
    "dev:metalsmith": "DEBUG=metalsmith* node ./npm_scripts/metalsmith/dev.js",
    "dev:webpack": "node ./npm_scripts/webpack/dev.js",
    "build": "rm -rf build && (npm run build:metalsmith & npm run build:webpack)",
    "build:metalsmith": "node ./npm_scripts/metalsmith/build.js",
    "build:webpack": "node ./npm_scripts/webpack/build.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "starter kit",
    "template",
    "boilerplate",
    "webpack",
    "metalsmith",
    "mpa",
    "static site",
    "live reload",
    "hot module replacement"
  ],
  "author": "Stas404: stas.webwork@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "css-loader": "^0.24.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "metalsmith": "^2.1.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-layouts": "^1.4.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-watch": "^1.0.3",
    "nightwatch": "^0.9.8",
    "node-notifier": "^4.6.1",
    "node-sass": "^3.8.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "1.14.0"
  }
}
